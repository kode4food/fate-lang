from '../../Types' import isArray

# Warning: this module assumes JavaScript-specific methods on Arrays

export def first(value)
  value[0] if isArray(value) else value
end

export def join(value, delim)
  (value if isArray(value) else [value]).join(delim or ' ')
end

export def last(value)
  value[value.length - 1] if isArray(value) else value
end

export def length(value)
  value.length if isArray(value) else 0
end

export def empty(value)
  length(value) = 0
end
